<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloudok.bbs.mapper.PostMapper">
	
	<resultMap extends="com.cloudok.core.mybatis.BaseMapper.baseMap" type="com.cloudok.bbs.po.PostPO" id="postMap">
		
		<result property="content" column="content"/>
		
		<result property="thumbsUpCount" column="thumbs_up_count"/>
		
		<result property="replyCount" column="reply_count"/>
		
		<result property="collectCount" column="collect_count"/>
		
		<result property="attachIds" column="attach_ids"/>
		
		<result property="isPublic" column="is_public"/>
		
		
	</resultMap>

	<sql id="columns">
		t.content,t.thumbs_up_count,t.reply_count,t.collect_count,t.attach_ids,t.is_public<include refid="com.cloudok.core.mybatis.BaseMapper.baseColumns"/>
	</sql>
	
	<insert id="create" parameterType="com.cloudok.bbs.po.PostPO">
		insert into bbs_post(content,thumbs_up_count,reply_count,collect_count,attach_ids,is_public,<include refid="com.cloudok.core.mybatis.BaseMapper.insertBaseColumns"/>)
		values(#{content},#{thumbsUpCount},#{replyCount},#{collectCount},#{attachIds},#{isPublic},<include refid="com.cloudok.core.mybatis.BaseMapper.insertBaseColumnsValue"/>)
	</insert>
	
	<update id="update" parameterType="com.cloudok.bbs.po.PostPO">
		update bbs_post set content=#{content},thumbs_up_count=#{thumbsUpCount},reply_count=#{replyCount},collect_count=#{collectCount},attach_ids=#{attachIds},is_public=#{isPublic},<include refid="com.cloudok.core.mybatis.BaseMapper.updateBaseColumns"/>
		<where>
			<include refid="com.cloudok.core.mybatis.BaseMapper.byId"/>
		</where>
	</update>
	
	<update id="merge" parameterType="com.cloudok.bbs.po.PostPO">
		update bbs_post set 
			
			<if test="content != null ">content = #{content},</if>
			
			<if test="thumbsUpCount != null ">thumbs_up_count = #{thumbsUpCount},</if>
			
			<if test="replyCount != null ">reply_count = #{replyCount},</if>
			
			<if test="collectCount != null ">collect_count = #{collectCount},</if>
			
			<if test="attachIds != null ">attach_ids=#{attachIds},</if>
			
			<if test="isPublic != null ">is_public=#{isPublic},</if>
			
			<include refid="com.cloudok.core.mybatis.BaseMapper.updateBaseColumns"/>
		<where>
			<include refid="com.cloudok.core.mybatis.BaseMapper.byId"/>
		</where>
	</update>
	
	<update id="delete" parameterType="list">
		<include refid="com.cloudok.core.mybatis.BaseMapper.logicDelete">
			<property name="tableName" value="bbs_post"/>
		</include>	
		<where>
			<include refid="com.cloudok.core.mybatis.BaseMapper.byIds"></include>
		</where>
	</update>
	
	<select id="select"
		parameterType="com.cloudok.core.query.QueryBuilder"
		resultMap="postMap">
		select
		<include refid="columns"></include>
		from bbs_post  t
		<where>
			<include refid="com.cloudok.core.mybatis.BaseMapper.condition"/>
		</where>
	</select>

	<select id="count"
		parameterType="com.cloudok.core.query.QueryBuilder"
		resultType="long">
		select
		count(1)
		from bbs_post t
		<where>
			<include refid="com.cloudok.core.mybatis.BaseMapper.condition"/>
		</where>
	</select>
</mapper>